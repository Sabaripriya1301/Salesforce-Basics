DML INSERT

  public class insclass
{
	public static void insmeth()
    {
        Account bank = New Account();
        bank.Name = 'HDFC';
        bank.AccountNumber = '17106048';
        insert bank;
        system.debug(bank);
    }
}

SELECT name FROM Account WHERE NAME = 'HDFC'


