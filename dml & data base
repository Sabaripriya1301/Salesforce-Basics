  DML UNDELETE

  public class delclass
{
	public static void deltmeth()
    {
        List<Account> ac = [select name from account WHERE isDeleted=true ALL ROWS];
        system.debug(ac);
        undelete ac;
        system.debug(ac);
    }
}


